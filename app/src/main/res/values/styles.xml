    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blue_2</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
        <item name="android:scaleY">0.9</item>
        <item name="android:scaleX">0.9</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textAlignment">center</item>
        <item name="android:scaleX">1.0</item>
        <item name="android:scaleY">1.0</item>
        <item name="android:colorControlNormal">@color/blue_2</item>
    </style>

    <style name="AppTheme.Picker2" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textAlignment">center</item>
        <item name="android:scaleX">1.0</item>
        <item name="android:scaleY">1.0</item>
        <item name="android:colorControlNormal">@color/blue_2</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.NoActionBar">
        <item name="colorControlNormal">@color/gray_1</item>   <!-- normal border color change as you wish -->
        <item name="android:scaleX">1.2</item>
        <item name="android:scaleY">1.2</item>
    </style>


</resources>